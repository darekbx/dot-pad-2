<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingIn">

    <EditText
        android:id="@+id/dot_note"
        android:layout_width="260dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:lines="10"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        android:hint="@string/dot_text_hint"
        android:gravity="top|start"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/dot_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dot_no_reminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dot_note"
        android:layout_marginTop="@dimen/paddingIn"
        />

    <TextView
        android:id="@+id/sticked_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dot_is_sticked"
        app:layout_constraintTop_toTopOf="@id/dot_is_sticked"
        app:layout_constraintBottom_toBottomOf="@id/dot_is_sticked"
        app:layout_constraintEnd_toStartOf="@id/dot_is_sticked"
        />
    <CheckBox
        android:id="@+id/dot_is_sticked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dot_note"
        />

    <com.dotpad2.ui.dot.colorselect.ColorSelectorView
        android:id="@+id/color_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dot_reminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/paddingIn"
        />
    <com.dotpad2.ui.dot.sizeselect.SizeSelectorView
        android:id="@+id/size_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/color_selector"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/paddingIn"
        />

    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/size_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reset_button"
        android:layout_marginTop="@dimen/paddingIn"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1.5dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_button_save"
        />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/size_selector"
        app:layout_constraintStart_toEndOf="@id/save_button"
        app:layout_constraintEnd_toStartOf="@id/reminder_button"
        android:layout_marginTop="@dimen/paddingIn"
        android:layout_marginStart="1.5dp"
        android:layout_marginEnd="1.5dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_button_reset"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/reminder_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/size_selector"
        app:layout_constraintStart_toEndOf="@id/reset_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/paddingIn"
        android:layout_marginStart="1.5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_button_reminder"
        />


</androidx.constraintlayout.widget.ConstraintLayout>